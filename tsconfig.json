{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "lib": ["es2015", "dom"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
