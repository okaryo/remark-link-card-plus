{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "lib": ["ES2020", "dom"],
    "module": "ES2020",
    "moduleResolution": "bundler",
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
